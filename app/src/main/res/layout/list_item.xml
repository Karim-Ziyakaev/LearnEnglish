<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/border"
    android:layout_margin="3dp">

    <TextView
        android:id="@+id/word_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/translation_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <ImageButton
        android:id="@+id/image_button_favorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:contentDescription="@string/image_button_favorite"
        android:foreground="?attr/selectableItemBackground"/>

    
    <ImageButton
        android:id="@+id/image_button_more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_more_vert_24"
        android:contentDescription="@string/more_image_button"
        android:foreground="?attr/selectableItemBackground"/>

